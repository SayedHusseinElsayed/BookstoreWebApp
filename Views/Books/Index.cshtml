@model IEnumerable<Bookstore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Book Page</h1>

<p>
    </br>
    <a asp-action="Create" class="btn btn-success">Create New Book</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Author Name
            </th>
            <th>
                Image
            </th>
            <th>
                Actions(Edit-Details-Delete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Author.Fullname)
            </td>
                <td>
                    @if (item.imageUrl !=null)
                    {
                        <img src="~/Uploads/@item.imageUrl" style="width:64px;" class="image-thumbnail" />
                    }
                    else
                    {
                        <img src="~/Uploads/default.png" style="width:64px;" class="image-thumbnail" />
                    }

                </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

            </td>
        </tr>
}
    </tbody>
</table>
