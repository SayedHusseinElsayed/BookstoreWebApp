@model Bookstore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Fullname)
        </dd>
        <dt class="col-sm-2">
            Book Image
        </dt>
        <dd>
            @if (Model.imageUrl != null)
            {
                <img src="~/Uploads/@Model.imageUrl" style="width:64px;" class="image-thumbnail" />
            }
            else
            {
                <img src="~/Uploads/default.png" style="width:64px;" class="image-thumbnail" />
            }
        </dd>
    </dl>
    
    <form asp-action="ConfirmDelete" asp-route-Id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
